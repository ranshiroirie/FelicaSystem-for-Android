<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.felica_device_read.FelicaDeviceMainFragment">

    <FrameLayout
        android:id="@+id/parent_fragment_felica_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <!--戻るボタンの設定（デフォルトは非アクティブ）-->
    <ImageButton
        android:id="@+id/back_button_felica_device_read_info"
        android:layout_width="@dimen/felica_info_back_button_size"
        android:layout_height="@dimen/felica_info_back_button_size"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:elevation="@dimen/felica_info_back_button_elevation"
        android:background="@drawable/shape_rounded_corners_bottom_nav_bar"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/felica_info_back_button_margin_bottom"
        android:layout_gravity="bottom|left"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>